<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/creations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/creations"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/visible"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resetBtn"
        android:layout_width="64dp"
        android:layout_height="34dp"
        android:text="@string/resetBtn"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.752" />

    <Button
        android:id="@+id/hitMeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/HitMeBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215" />

    <TextView
        android:id="@+id/hitCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hitCounter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/visible"
        android:layout_width="64dp"
        android:layout_height="16dp"
        android:text="@string/visible"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/hitMeButton"
        app:layout_constraintStart_toStartOf="@+id/hitMeButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hitCounterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hitCounter"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/hitCounter"
        app:layout_constraintEnd_toEndOf="@+id/hitCounter"
        app:layout_constraintStart_toStartOf="@+id/hitCounter"
        app:layout_constraintTop_toTopOf="@+id/hitMeButton" />

    <TextView
        android:id="@+id/visibleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="@string/visible"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/visible"
        app:layout_constraintStart_toEndOf="@+id/hitCounterText"
        app:layout_constraintTop_toBottomOf="@+id/hitMeButton"
        app:layout_constraintVertical_bias="0.326" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/creations"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/creations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/visibleText"
        app:layout_constraintTop_toTopOf="@+id/hitMeButton" />

</androidx.constraintlayout.widget.ConstraintLayout>